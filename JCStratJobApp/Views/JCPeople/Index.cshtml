
@{
    ViewBag.Title = "Database table display page";
}



        <div id="JCgrid"></div>


        <script>
            $(document).ready(function () {
                
                    dataSource = new kendo.data.DataSource({
                        transport: {
                            read: {
                                url: "/JCPeople",
                                dataType: "jsonp"
                            },
                            update: {
                                url: "/JCPeople/people_Update",
                                dataType: "jsonp"
                            },
                            destroy: {
                                url: "/JCPeople/people_Destroy",
                                dataType: "jsonp"
                            },
                            create: {
                                url: "/JCPeople/people_Create",
                                dataType: "jsonp"
                            },
                            parameterMap: function (options, operation) {
                                if (operation !== "read" && options.models) {
                                    return { models: kendo.stringify(options.models) };
                                }
                            }
                        },
                        batch: true,
                        pageSize: 20,
                        schema: {

                            model: {
                                id: "Id",
                                fields: {
                                    Id: { editable: false, nullable: true },
                                    Name: { validation: { required: true } },
                                    Address: { validation: { required: true } },
                                    Phone_Number: { validation: { min: 10, required: true } }
                                }
                            }
                        }
                    });

                $("#JCgrid").kendoGrid({
                    dataSource: dataSource,
                    navigatable: true,
                    pageable: true,
                    height: 550,
                    toolbar: ["create", "save", "cancel"],
                    columns: [
                      "Id",
                      { field: "Name"},
                      { field: "Address", width: 120 },
                      { field: "Phone_Number", title: "Phone Number", width: 120 },
                      { command: "destroy", title: "&nbsp;", width: 150 }],
                    editable: true
                });
            });


            function error_handler(e) {
                if (e.errors) {
                    var message = "Errors:\n";
                    $.each(e.errors, function (key, value) {
                        if ('errors' in value) {
                            $.each(value.errors, function () {
                                message += this + "\n";
                            });
                        }
                    });
                    alert(message);
                }
            }
        </script>
